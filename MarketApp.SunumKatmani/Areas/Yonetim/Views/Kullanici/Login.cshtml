@model MarketApp.VarlikKatmani.Models.Kullanici
@{
    ViewBag.Title = "Giriş Yap";
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - MarketApp</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        .login-container {
            margin-top: 100px;
        }

        .login-card {
            max-width: 400px;
            margin: 0 auto;
            padding: 20px;
        }

        .btn-block {
            width: 100%;
        }
    </style>
</head>
<body>
    <div class="container login-container">
        <div class="card shadow-sm login-card">
            <div class="card-body">
                <div class="text-center mb-4">
                    <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/1/12/User_icon_2.svg/200px-User_icon_2.svg.png" alt="Giriş Resmi" class="img-fluid" style="max-width: 120px;" />
                    <h2 class="mt-3">Giriş Yap</h2>
                </div>
                @using (Html.BeginForm("Login", "Kullanici", new { area = "Yonetim" }, FormMethod.Post, new { @class = "form" }))
                {
                    @Html.AntiForgeryToken()
                    <div class="form-group">
                        @Html.LabelFor(x => x.EPosta, new { @class = "form-label" })
                        @Html.TextBoxFor(x => x.EPosta, new { @class = "form-control", @placeholder = "E-posta adresinizi girin", @required = "required" })
                        @Html.ValidationMessageFor(x => x.EPosta, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(x => x.Parola, new { @class = "form-label" })
                        @Html.PasswordFor(x => x.Parola, new { @class = "form-control", @placeholder = "Parolanızı girin", @required = "required" })
                        @Html.ValidationMessageFor(x => x.Parola, "", new { @class = "text-danger" })
                    </div>
                    <div class="text-center">
                        <button type="submit" class="btn btn-primary btn-block">Giriş Yap</button>
                    </div>
                }
            </div>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/additional-methods.min.js"></script>
</body>
</html>