@model IEnumerable<MarketApp.VarlikKatmani.Models.Kullanici>

@{
    ViewBag.Title = "Kullanıcılar";
    Layout = "~/Areas/Yonetim/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                <h2 class="mb-0">Kullanıcı Listesi</h2>
                <a href="@Url.Action("Ekle", "Kullanici", new { area = "Yonetim" })" class="btn btn-light">Yeni Kullanıcı Ekle</a>
            </div>
            <div class="card-body">
                <table class="table table-hover table-bordered">
                    <thead class="thead-dark">
                        <tr>
                            <th>E-posta</th>
                            <th>Ad</th>
                            <th>Soyad</th>
                            <th>Yetki</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.EPosta</td>
                                <td>@item.Ad</td>
                                <td>@item.Soyad</td>
                                <td>@item.Yetki</td>
                                <td>
                                    <a href="@Url.Action("Duzenle", "Kullanici", new { eposta = item.EPosta, area = "Yonetim" })" class="btn btn-info btn-sm">Düzenle</a>
                                    <a href="@Url.Action("Sil", "Kullanici", new { eposta = item.EPosta, area = "Yonetim" })" class="btn btn-danger btn-sm">Sil</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                    </
