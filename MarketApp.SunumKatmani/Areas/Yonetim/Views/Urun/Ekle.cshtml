@model MarketApp.VarlikKatmani.Models.Urun
@{
    ViewBag.Title = "Ürün Ekle";
    Layout = "~/Areas/Yonetim/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-md-6 offset-md-3">
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white">
                <h2 class="mb-0">Ürün Ekle</h2>
            </div>
            <div class="card-body">
                @using (Html.BeginForm("Ekle", "Urun", new { area = "Yonetim" }, FormMethod.Post, new { @class = "form-horizontal" }))
                {
                    @Html.AntiForgeryToken()
                    <div class="form-group row">
                        @Html.LabelFor(m => m.Ad, "Ürün Adı", new { @class = "col-md-4 col-form-label" })
                        <div class="col-md-8">
                            @Html.TextBoxFor(m => m.Ad, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Ad, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group row">
                        @Html.LabelFor(m => m.StokAdet, "Stok Adet", new { @class = "col-md-4 col-form-label" })
                        <div class="col-md-8">
                            @Html.TextBoxFor(m => m.StokAdet, new { @class = "form-control", type = "number", min = "0" })
                            @Html.ValidationMessageFor(m => m.StokAdet, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group row">
                        @Html.LabelFor(m => m.Fiyat, "Fiyat", new { @class = "col-md-4 col-form-label" })
                        <div class="col-md-8">
                            @Html.TextBoxFor(m => m.Fiyat, new { @class = "form-control", type = "number", step = "0.01", min = "0" })
                            @Html.ValidationMessageFor(m => m.Fiyat, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    @*<div class="form-group row">
                        @Html.LabelFor(m => m.Resim, "Resim URL", new { @class = "col-md-4 col-form-label" })
                        <div class="col-md-8">
                            @Html.TextBoxFor(m => m.Resim, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Resim, "", new { @class = "text-danger" })
                        </div>
                    </div>*@
                    <div class="form-group row">
                        @Html.LabelFor(m => m.MarkaId, "Marka", new { @class = "col-md-4 col-form-label" })
                        <div class="col-md-8">
                            @Html.DropDownListFor(m => m.MarkaId, (SelectList)ViewBag.Markalar, "Seçiniz", new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.MarkaId, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group row">
                        @Html.LabelFor(m => m.KategoriId, "Kategori", new { @class = "col-md-4 col-form-label" })
                        <div class="col-md-8">
                            @Html.DropDownListFor(m => m.KategoriId, (SelectList)ViewBag.Kategoriler, "Seçiniz", new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.KategoriId, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-12 text-center">
                            <button type="submit" class="btn btn-primary">Kaydet</button>
                            <a href="@Url.Action("Listele", "Urun", new { area = "Yonetim" })" class="btn btn-secondary">İptal</a>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
@section scripts {
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
}