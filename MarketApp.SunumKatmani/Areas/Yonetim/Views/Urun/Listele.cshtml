@model List<MarketApp.VarlikKatmani.Models.Urun>
@{
    ViewBag.Title = "Ürünler";
    Layout = "~/Areas/Yonetim/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-md-12">
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                <h2 class="mb-0">Ürün Listesi</h2>
                <a href="@Url.Action("Ekle", "Urun", new { area = "Yonetim" })" class="btn btn-light">Yeni Ürün Ekle</a>
            </div>
            <div class="card-body">
                <table class="table table-hover table-bordered">
                    <thead class="thead-dark">
                        <tr>
                            <th>ID</th>
                            <th>Ad</th>
                            <th>Marka</th>
                            <th>Kategori</th>
                            <th>Stok Adet</th>
                            <th>Fiyat</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.Ad</td>
                                <td>@item.Marka.Ad</td>
                                <td>@item.Kategori.Ad</td>
                                <td>@item.StokAdet</td>
                                <td>@item.Fiyat.ToString("C")</td>
                                <td>
                                    <a href="@Url.Action("Duzenle", "Urun", new { id = item.Id, area = "Yonetim" })" class="btn btn-info btn-sm">Düzenle</a>
                                    <a href="@Url.Action("Sil", "Urun", new { id = item.Id, area = "Yonetim" })" class="btn btn-danger btn-sm">Sil</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>