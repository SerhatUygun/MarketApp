@model List<MarketApp.VarlikKatmani.Models.SatisDetay>
@{
    ViewBag.Title = "Satış Detayı";
    Layout = "~/Areas/Yonetim/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-md-12">
        <div class="card shadow-sm">
            <div class="card-header bg-info text-white">
                <h2 class="mb-0">Satış Detayı</h2>
            </div>
            <div class="card-body">
                <table class="table table-hover table-bordered">
                    <thead class="thead-dark">
                        <tr>
                            <th>Ürün</th>
                            <th>Adet</th>
                            <th>Tutar</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Urun.Ad</td>
                                <td>@item.Adet</td>
                                <td>@item.Tutar.ToString("C")</td>
                            </tr>
                        }
                    </tbody>
                </table>
                <div class="text-center">
                    <a href="@Url.Action("Listele", "Satis", new { area = "Yonetim" })" class="btn btn-secondary">Geri</a>
                </div>
            </div>
        </div>
    </div>
</div>