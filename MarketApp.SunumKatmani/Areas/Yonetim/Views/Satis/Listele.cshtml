@model List<MarketApp.VarlikKatmani.Models.Satis>
@{
    ViewBag.Title = "Satışlar";
    Layout = "~/Areas/Yonetim/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-md-12">
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                <h2 class="mb-0">Satış Listesi</h2>
                <a href="@Url.Action("SatisEkle", "Satis", new { area = "Yonetim" })" class="btn btn-light">Yeni Satış</a>
            </div>
            <div class="card-body">
                <table class="table table-hover table-bordered">
                    <thead class="thead-dark">
                        <tr>
                            <th>ID</th>
                            <th>Tarih</th>
                            <th>Toplam Tutar</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.TarihSaat.ToString("dd.MM.yyyy HH:mm")</td>
                                <td>@item.ToplamTutar.ToString("C")</td>
                                <td>
                                    <a href="@Url.Action("SatisDetay", "Satis", new { id = item.Id, area = "Yonetim" })" class="btn btn-info btn-sm">Detay</a>
                                    <a href="@Url.Action("Sil", "Satis", new { id = item.Id, area = "Yonetim" })" class="btn btn-danger btn-sm">Sil</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>