@model MarketApp.VarlikKatmani.Models.Satis
@{
    ViewBag.Title = "Sepet";
    Layout = "~/Areas/Yonetim/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-md-12">
        <div class="card shadow-sm">
            <div class="card-header bg-info text-white">
                <h2 class="mb-0">Sepet</h2>
            </div>
            <div class="card-body">
                @if (Model.Detaylar.Any())
                {
                    <table class="table table-hover table-bordered">
                        <thead class="thead-dark">
                            <tr>
                                <th>Ürün</th>
                                <th>Adet</th>
                                <th>Tutar</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Detaylar)
                            {
                                <tr>
                                    <td>@item.Urun.Ad</td>
                                    <td>@item.Adet</td>
                                    <td>@item.Tutar.ToString("C")</td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <td colspan="2"><strong>Toplam:</strong></td>
                                <td><strong>@Model.ToplamTutar.ToString("C")</strong></td>
                            </tr>
                        </tfoot>
                    </table>
                    <div class="text-center">
                        <a href="@Url.Action("SatisTamamla", "Satis", new { area = "Yonetim" })" class="btn btn-success">Satışı Tamamla</a>
                        <a href="@Url.Action("SatisEkle", "Satis", new { area = "Yonetim" })" class="btn btn-secondary">Ürünlere Geri Dön</a>
                    </div>
                }
                else
                {
                    <p class="lead">Sepetinizde ürün bulunmamaktadır.</p>
                    <div class="text-center">
                        <a href="@Url.Action("SatisEkle", "Satis", new { area = "Yonetim" })" class="btn btn-secondary">Ürünlere Geri Dön</a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>